Name: Demo-GitHub Actions

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: checkout code
        uses: actions/Checkout@v4

      - name: Deploy vis SSH
        uses: appleboy/ssh-action@1.0.3
        with:
		      - host: ${{ secrets.SSH_HOST }}
		        username: root
		        key: ${{ secrets.SSH_KEY }}
            script:
             cd #Absolute path of server's working directory
             git pull
             docker compose up -d --build 
	

        